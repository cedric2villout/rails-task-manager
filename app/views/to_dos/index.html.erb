<h1>All the Todos</h1>


<%= link_to "create new", new_to_do_path %>
<% @todos.each do |todo| %>
<h2><%= todo.task %></h2>
<h3><%= todo.time %></h3>
<%= link_to "Edit", edit_to_do_path(todo) %>
<%= link_to "Show", to_do_path(todo) %>
<%= link_to "Delete", to_do_path(todo),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
